<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.User.UserCustomListView"
    android:orientation="vertical"
    android:weightSum="4"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAdminUserViewPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@string/common_open_on_phone"
            android:gravity="center"
            android:text="Phone "
            android:textColor="#ffa100"
            android:textSize="20sp"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvAdminUserViewName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@string/common_open_on_phone"
            android:gravity="center"
            android:text="Name "
            android:textColor="#ffa100"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/bdel"
            android:layout_width="150sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/deleteicon"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAdminUserViewEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Email "
            android:textColor="#ffa100"
            android:fontFamily="@string/common_open_on_phone"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAdminUserViewRole"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Role "
            android:textColor="#ffa100"
            android:fontFamily="@string/common_open_on_phone"

            />
    </LinearLayout>

</LinearLayout>