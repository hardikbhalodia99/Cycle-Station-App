<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminUserInsert"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="#faebd7"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="35sp"
            android:text="ADMIN USER"
            android:textColor="#ffa100"
            android:fontFamily="@string/common_open_on_phone"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/bstation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="STATION"
            android:textColor="#ffffff"
            android:background="#ff5719"
            android:layout_margin="17sp"
            />

        <Button
            android:id="@+id/bcycle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="CYCLE"
            android:textColor="#ffffff"
            android:background="#ff5719"
            android:layout_margin="17sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/buser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="USER"
            android:textColor="#ffffff"
            android:background="#ff5719"
            android:layout_margin="17sp"
            />

        <Button
            android:id="@+id/bcomplain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="COMPLAIN"
            android:textColor="#ffffff"
            android:background="#ff5719"
            android:layout_margin="17sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/bfb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="FEEDBACK"
            android:textColor="#ffffff"
            android:background="#ff5719"
            android:layout_margin="17sp"
            />

        <Button
            android:id="@+id/bpay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="17sp"
            android:text="PAYMENT HISTORY AND RETURN CYCLE"
            android:textColor="#ffffff"
            android:background="#ff5719"
            android:layout_margin="17sp"
            />

    </LinearLayout>




































</LinearLayout>