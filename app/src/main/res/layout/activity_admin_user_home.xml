<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.User.AdminUserHome"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="#faebd7"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="35sp"
            android:text="ADMIN USER HOME"
            android:textColor="#ffa100"
            android:fontFamily="@string/common_open_on_phone"

            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/binsertuser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="INSERT USER"
            android:textColor="#ffffff"
            android:background="#ff5719"
            android:layout_margin="17sp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/bupdateuser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="UPDATE USER"
            android:textColor="#ffffff"
            android:background="#ff5719"
            android:layout_margin="17sp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/bdeleteuser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="DELETE USER"
            android:textColor="#ffffff"
            android:background="#ff5719"
            android:layout_margin="17sp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/bviewuser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="VIEW USER"
            android:textColor="#ffffff"
            android:background="#ff5719"
            android:layout_margin="17sp"
            />



    </LinearLayout>
</LinearLayout>